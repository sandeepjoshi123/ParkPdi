<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_margin"
        android:weightSum="10">


        <TextView
            style="@style/search_lodge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.8"
            android:text="Title" />


        <TextView
            style="@style/search_lodge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center_horizontal"
            android:text=":" />

        <EditText
            android:id="@+id/et_title"
            style="@style/search_lodge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:background="@drawable/edit_back_lodge"
            android:imeOptions="actionNext"
            android:padding="@dimen/comm_dis"
            android:singleLine="true" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_margin"
        android:weightSum="10">


        <TextView
            style="@style/search_lodge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.8"
            android:text="Serial Number" />


        <TextView
            style="@style/search_lodge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center_horizontal"
            android:text=":" />

        <EditText
            android:id="@+id/et_serial"
            style="@style/search_lodge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:background="@drawable/edit_back_lodge"
            android:imeOptions="actionNext"
            android:padding="@dimen/comm_dis"
            android:singleLine="true" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_margin"
        android:weightSum="10">


        <TextView
            style="@style/search_lodge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.8"
            android:text="Price" />


        <TextView
            style="@style/search_lodge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center_horizontal"
            android:text=":" />

        <EditText
            android:id="@+id/et_price"
            style="@style/search_lodge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:background="@drawable/edit_back_lodge"
            android:imeOptions="actionNext"
            android:padding="@dimen/comm_dis"
            android:singleLine="true" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_margin"
        android:weightSum="10">


        <TextView
            style="@style/search_lodge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.8"
            android:text="Size" />


        <TextView
            style="@style/search_lodge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center_horizontal"
            android:text=":" />

        <EditText
            android:id="@+id/et_size"
            style="@style/search_lodge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:background="@drawable/edit_back_lodge"
            android:imeOptions="actionNext"
            android:padding="@dimen/comm_dis"
            android:singleLine="true" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_margin"
        android:weightSum="10">


        <TextView
            style="@style/search_lodge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.8"
            android:text="Number of bedrooms" />


        <TextView
            style="@style/search_lodge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center_horizontal"
            android:text=":" />

        <EditText
            android:id="@+id/et_bed"
            style="@style/search_lodge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:background="@drawable/edit_back_lodge"
            android:imeOptions="actionNext"
            android:padding="@dimen/comm_dis"
            android:singleLine="true" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_margin"
        android:weightSum="10">


        <TextView
            style="@style/search_lodge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.8"
            android:text="Number of bathrooms" />


        <TextView
            style="@style/search_lodge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center_horizontal"
            android:text=":" />

        <EditText
            android:id="@+id/et_bath"
            style="@style/search_lodge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:background="@drawable/edit_back_lodge"
            android:imeOptions="actionNext"
            android:padding="@dimen/comm_dis"
            android:singleLine="true" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_margin"
        android:weightSum="10">


        <TextView
            style="@style/search_lodge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.8"
            android:text="Amenties" />


        <TextView
            style="@style/search_lodge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center_horizontal"
            android:text=":" />

        <EditText
            android:id="@+id/et_amenties"
            style="@style/search_lodge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:background="@drawable/edit_back_lodge"
            android:imeOptions="actionNext"
            android:padding="@dimen/comm_dis"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_margin"
        android:weightSum="10">


        <TextView
            style="@style/search_lodge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.8"
            android:text="Description" />


        <TextView
            style="@style/search_lodge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center_horizontal"
            android:text=":" />

        <EditText
            android:id="@+id/et_description"
            style="@style/search_lodge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:background="@drawable/edit_back_lodge"
            android:imeOptions="actionNext"
            android:minLines="5"
            android:padding="@dimen/comm_dis" />

    </LinearLayout>


</LinearLayout>





